<%= simple_form_for([@menu, @menu.menu_items.build]) do |f| %>
    <%= f.input :name %>
    <%= f.input :text %>
    <%= f.input :price %>

    <%= f.input :category_list, :as => :check_boxes, :collection => @categories, :hint => "Please check all that apply" %>
    <%= f.input :tag_list %>
    <%= f.button :submit %>
<% end %>
