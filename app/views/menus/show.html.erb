<h1><%= @menu.title %></h1>

<p>
  <strong>Tags:</strong>
  <% if params[:tag] %>
    <%= params[:tag] %> <%= link_to 'X', menu_path(@menu) %>
  <% else %>
    <% tag_cloud(MenuItem.tag_counts, %w(css1 css2 css3 css4)) do |tag, css_class| %>
      <%= link_to tag.name, tag_path(@menu, tag.name), :class => css_class %>
    <% end %>
  <% end %>
</p>

<h2>Menu Items:</h2>
<%= render @menu_items %>

<% if user_signed_in? %>
  <h2>Add a menu item:</h2>
  <%= render "menu_items/form" %>
<% end %>
  
<%= link_to 'Back', menus_path %>
