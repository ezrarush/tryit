class MenusController < ApplicationController
  def index
    @menu = Menu.all
  end

  def show
    @menu = Menu.find(params[:id])
  end
  
  def new
  end
  
  def create
    @menu = Menu.new(menu_params)
    
    @menu.save
    redirect_to @menu
  end
  
  private
  
  def menu_params
    params.requirea(:article).permit(:title, :text)
  end
  
end
